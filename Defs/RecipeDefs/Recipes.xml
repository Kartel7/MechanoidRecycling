        <jobString>Crafting bionic.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>MechanoidElectronicPart</li>
                    </thingDefs>
                </filter>
                <count>15</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>MechanoidHullPart</li>
                    </thingDefs>
                </filter>
                <count>8</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Component</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Steel</li>
                <li>MechanoidElectronicPart</li>
                <li>MechanoidHullPart</li>
                <li>Component</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <BionicEye>1</BionicEye>
